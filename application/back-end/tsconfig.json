{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "noEmit": false,
    "rootDir": "../../",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/configuration/*"],
      "@controllers/*": ["src/controllers/*"],
      "@errors/*": ["src/error/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@services/*": ["src/services/*"],
      "@repositories/*": ["src/repositories/*"],
      "#error": ["src/error/index"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "../../package/common"
    },
    {
      "path": "../../package/domain"
    }
  ]
}
